<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".Map">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/edstart"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:ems="10"
        android:hint="Enter a  Check Point or Scan Qr"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="@color/zxinglegacy_contents_text"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imvqr"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/edstart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:src="@drawable/scan" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edstart"
        android:layout_marginTop="93dp"
        android:background="@android:color/black"
        android:spinnerMode="dialog" />

    <ImageView
        android:id="@+id/imvshowmap"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/scan" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/edstart"
        android:layout_alignParentStart="true"
        android:src="@mipmap/currentlocation" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_above="@+id/imageView7"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="-78dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/active_dot" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:src="@mipmap/destination" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginTop="53dp"
        android:src="@drawable/active_dot" />

</RelativeLayout>